@page
@model Round.ASP.ForumCenter.Pages.User.LoginModel
@{
    ViewData["Title"] = "登录账户";
}

<h1>登录账户</h1>

@if (!Model.Login)
{
    <form>
        <label for="EMail">电子邮件:</label>
        <input type="email" id="EMail" name="EMail" required>

        <label for="PassWord">密码:</label>
        <input type="password" id="PassWord" name="PassWord" required>

        <br />
        <button type="submit" style="height:50px;">登录</button>
    </form>
}
else
{
    @if (Model.uuids == null)
    {
        <form>
            <label for="EMail">电子邮件:</label>
            <input type="email" id="EMail" name="EMail" required>

            <label for="PassWord">密码:</label>
            <input type="password" id="PassWord" name="PassWord" required>
            <label style="color:red;">输入的信息错误</label>
            <br />
            <button type="submit" style="height:50px;">登录</button>
        </form>
    }
}


<style>

    h2 {
        text-align: center;
        color: #333;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        margin-top: 10px;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    input[type="submit"] {
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
    }

        .checkbox-group input[type="checkbox"] {
            margin-right: 10px;
        }
</style>