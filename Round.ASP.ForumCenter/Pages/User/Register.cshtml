@page
@model Round.ASP.ForumCenter.Pages.User.RegisterModel
@{
    ViewData["Title"] = "注册账户";
}

<h1>注册账户</h1>

@if (!Model.YSM)
{
    <form>
        <label for="UserName">用户名:</label>
        <input type="text" id="UserName" name="UserName" required>

        <label for="EMail">电子邮件:</label>
        <input type="email" id="EMail" name="EMail" required>

        <label for="PassWord">密码:</label>
        <input type="password" id="PassWord" name="PassWord" required>

        <br />
        <button type="submit" style="height:50px;">注册</button>
    </form>
}
else
{
    @if (Model.Mess)
    {
        @if (Model.CapN)
        {
            <h3>账户注册成功！</h3>
            <a href="/User/Login"><button>点此登录</button></a>
        }
        else
        {
            <form>
                <label for="Captcha">验证码：</label>
                <input type="text" id="Captcha" name="Captcha" required>
                <label>验证码已发送至您的邮箱，请注意查收！</label>

                <label style="color:red;">验证码有误</label>
                <br />
                <button type="submit" style="height:50px;">验证</button>
            </form>
        }
    }
    else
    {
        <form>
            <label for="Captcha">验证码：</label>
            <input type="text" id="Captcha" name="Captcha" required>
            <label>验证码已发送至您的邮箱，请注意查收！</label>

            <br />
            <button type="submit" style="height:50px;">验证</button>
        </form>
    }
}


<style>

    h2 {
        text-align: center;
        color: #333;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    label {
        margin-top: 10px;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    input[type="submit"] {
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
    }

    .checkbox-group input[type="checkbox"] {
        margin-right: 10px;
    }
</style>